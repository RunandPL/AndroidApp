<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mp.runand.app.activities.ProfileInformation">

    <TextView
        android:text="@string/profile_email_address_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="start"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/emailHeaderProfileInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/emailHeaderProfileInfo"
        android:id="@+id/profileEmailAddress" />

    <TextView
        android:text="@string/profile_trainer_email_address_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="start"
        android:textStyle="bold"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profileEmailAddress"
        android:id="@+id/trainerHeaderProfileInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/trainerHeaderProfileInfo"
        android:id="@+id/profileTrainerEmailAddress" />

    <Button
        android:id="@+id/removeTrainerButton"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/profileTrainerEmailAddress"
        android:height="10dp"
        android:width="200dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/remove_trainer_button"/>

    <TextView
        android:text="@string/change_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/removeTrainerButton"
        android:id="@+id/passwordMessage" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password1"
        android:layout_below="@+id/passwordMessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password2"
        android:layout_below="@+id/password1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/setPasswordButton"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/password2"
        android:height="10dp"
        android:width="200dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/change_password_btn"/>

    <TextView
        android:text="@string/write_password1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="start"
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/password1txt"
        android:layout_above="@+id/password2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/write_password2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="start"
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/password2txt"
        android:layout_alignBottom="@+id/password2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
