<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.mp.runand.app.activities.SplashScreen">

    <TextView android:id="@+id/fullscreen_content"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:textSize="60sp"
        android:gravity="center"
        android:text="@string/run_and_splash1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/fullscreen_content2"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:textSize="20sp"
        android:textColor="#33b5e5"
        android:text="@string/run_and_splash2"
        android:layout_below="@+id/fullscreen_content"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
