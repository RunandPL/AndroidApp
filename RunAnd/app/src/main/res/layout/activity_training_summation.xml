<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mp.runand.app.activities.TrainingSummation">

    <TextView
        android:id="@+id/lengthDescription"
        android:text="Długość"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingBottom="0dp"/>

    <TextView
        android:id="@+id/lengthTextView"
        android:text="DługośćWartosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lengthDescription"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="0dp"/>

    <TextView
        android:id="@+id/caloriesDescription"
        android:text="Kalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/caloriesTextView"
        android:text="KalorieWartosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/caloriesDescription"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="0dp"/>

    <TextView
        android:id="@+id/paceDescription"
        android:text="Tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingTop="15dp"
        android:layout_below="@id/lengthTextView"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/paceTextView"
        android:text="TempoWartosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/paceDescription"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="0dp"/>

    <TextView
        android:id="@+id/timeDescription"
        android:text="Czas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/caloriesTextView"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/timeTextView"
        android:text="CzasWartosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/timeDescription"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="0dp"
        android:paddingBottom="25dp"/>

    <ImageView
        android:id="@+id/trackImage"
        android:layout_below="@id/paceTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trasa Publiczna"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/publicTrackDescription"
        android:layout_below="@+id/trackImage"
        android:layout_alignParentLeft="true"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publicTrackCheckBox"
        android:layout_toRightOf="@+id/publicTrackDescription"
        android:layout_below="@+id/trackImage"
        android:paddingTop="55dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveTrainingButton"
        android:layout_below="@+id/trackImage"
        android:layout_alignParentRight="true"
        android:text="Zapisz Trening"/>
</RelativeLayout>
