<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mp.runand.app.activities.TrainingActivity"
    android:background="#0099cc">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startTraining"
            android:id="@+id/startTrainingButton"
            android:background="@drawable/layer_button_start"
            style="@style/ButtonText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopTraining"
            android:id="@+id/stopTrainingButton"
            android:background="@drawable/layer_button_stop"
            style="@style/ButtonText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/takePicture"
            android:id="@+id/takePictureButton"
            android:background="@drawable/layer_button_photo"
            style="@style/ButtonText"/>
        </LinearLayout>


</RelativeLayout>
